<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>客户流水</title>
    <link href="/admin/css/bootstrap.min.css" rel="stylesheet">
    <!-- jqgrid-->
    <link href="/admin/css/ui.jqgrid.css" rel="stylesheet">
    <link href="/admin/css/animate.min.css" rel="stylesheet">
    <link href="/admin/css/style.min.css" rel="stylesheet">
    <style>
    /*搜索框样式重写*/
    #searchmodfbox_table_list_2{
        position:absolute !important;
        top:302px !important;
        left:603px !important;
    }
    </style>
</head>
<body class="gray-bg" style="overflow:hidden">
<div class="animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <h4 class="m-t">客户流水</h4>
                    <div class="jqGrid_wrapper">
                        <table id="table_list_2"></table>
                        <div id="pager_list_2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 全局js -->
<script src="/admin/js/jquery-2.1.1.min.js"></script>
<script src="/admin/js/bootstrap.min.js?v=3.4.0"></script>

<!-- jqGrid -->
<script src="/admin/js/jqGrid/grid.locale-cn.js"></script>
<script src="/admin/js/jqGrid/jquery.jqGrid.min.js"></script>

<!-- 自定义js -->
<script src="/admin/js/content.min.js"></script>
<script>
    $(document).ready(function()
    {
        $.jgrid.defaults.styleUI="Bootstrap";
        $("#table_list_2").jqGrid({
            url:"/admin/home/getUserbill",
            datatype:"json",
            height:700,
            autowidth:true,
            shrinkToFit:true,
            rowNum:19,
            colNames:["生效序列号","用户","交易内容","交易金额","交易前余额","交易后余额","流水来源","流水状态","发生时间","生效时间"],
            colModel:
                    [   //默认不可编辑 可搜索 可排序
                        {name:"UpdateSN",index:"UpdateSN",sorttype:"int",key:true,width:40},
                        {name:"UserName",index:"UserName",sortable:false,width:100},
                        {name:"Subject",index:"Subject",sortable:false,width:40},
                        {name:"Amount",index:"Amount",sortable:false,width:50},
                        {name:"BeforeBalance",index:"BeforeBalance",sortable:false,width:50},
                        {name:"Balance",index:"Balance",sortable:false,width:50},
                        {name:"Source",index:"Source",sortable:false,formatter:'select',editoptions:{value:"10:支付;20:退款;30:充值"},width:40},
                        {name:"State",index:"State",sortable:false,formatter:'select',editoptions:{value:"0:等待处理;1:交易完成;"},width:50},
                        {name:"CreateDate",index:"CreatDate",sorttype:"date",width:100},
                        {name:"UpdateDate",index:"UpdateDate",sorttype:"date",width:100}
                    ],
            pager:"#pager_list_2",
            loadonce:true,
            viewrecords:true
        });
        $("#table_list_2").jqGrid("navGrid","#pager_list_2",{edit:false,add:false,del:false,search:true},{closeAfterEdit:true,reloadAfterSubmit:false});

        $(window).bind("resize",function(){var b=$(".jqGrid_wrapper").width();$("#table_list_2").setGridWidth(b)})
    });
</script>
</body>
</html>